<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#50ffffff" android:startColor="#d387a77d" />
            <stroke android:width="1dp" android:color="#FFFFFF" />
            <padding android:bottom="4dp" android:left="3dp" android:right="3dp" android:top="6dp" />
            <corners android:radius="50px"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#50707070" android:startColor="#d3384634" />
            <stroke android:width="1dp" android:color="#FFFFFF" />
            <padding android:bottom="4dp" android:left="3dp" android:right="3dp" android:top="6dp" />
            <corners android:radius="50px"/>
        </shape>
    </item>
</selector>